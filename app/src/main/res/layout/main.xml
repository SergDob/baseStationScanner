<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.serg.basestationscanner.MainActivity">

    <TextView
        android:id="@+id/selectStation"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text=" Выбранная базовая станция:"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Добавить новую  базовую станцию"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="186dp" />

    <Spinner
        android:id="@+id/baseStations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="389dp"
        android:layout_weight="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/baseStationsArray"
        android:layout_width="354dp"
        android:layout_height="65dp"
        android:text="Ближайшие базовые станции:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="312dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="371dp"
        android:layout_height="47dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Здесь будет CID сотовой станции"
        app:layout_constraintLeft_toLeftOf="@+id/selectStation"
        app:layout_constraintRight_toRightOf="@+id/selectStation"
        tools:layout_editor_absoluteY="67dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <Spinner
        android:id="@+id/metroStationsArray"
        android:layout_width="366dp"
        android:layout_height="45dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="110dp"
        android:layout_height="57dp"
        android:text="Настройки"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="453dp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="24dp">

    </FrameLayout>

    <Button
        android:id="@+id/buttonPushToServer"
        android:layout_width="233dp"
        android:layout_height="53dp"
        android:text="Отправить данные на сервер"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="454dp" />

</android.support.constraint.ConstraintLayout>
